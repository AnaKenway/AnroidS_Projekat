<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.traveller.CloudAnchorActivity">

    <android.opengl.GLSurfaceView
        android:id="@+id/surfaceview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="top"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/host_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/host_button_text"
            android:backgroundTint="@color/positive_green"/>

        <Button
            android:id="@+id/resolve_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dig"
            android:backgroundTint="@color/sand"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/room_code_text"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:paddingHorizontal="15dp"
                android:paddingVertical="5dp"
                android:fontFamily="monospace"
                android:text="@string/initial_treasure_name"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:background="@color/sand"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnBack_cloud_anchor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttonBack"
            android:layout_gravity="bottom"
            android:backgroundTint="@color/x_red"
            android:layout_marginRight="10dp"/>
        <Button
            android:id="@+id/btnSave_cloud_anchor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Save"
            android:layout_gravity="bottom"
            android:backgroundTint="@color/positive_green"/>

    </LinearLayout>

</RelativeLayout>
