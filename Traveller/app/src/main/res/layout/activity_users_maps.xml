<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.traveller.UsersMapsActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar">

    </com.google.android.material.appbar.AppBarLayout>

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UsersMapsActivity" />

    <SearchView
        android:id="@+id/searchItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:background="#80FFFFFF" />

    <Button
        android:id="@+id/buttonAddPlace"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="12dp"
        android:fontFamily="casual"
        android:text="@string/buttonAddPlace"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:backgroundTint="@color/colorAccent"
        app:iconTint="#2196F3" />

    <Button
        android:id="@+id/buttonTreasureHunt"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="10dp"
        android:fontFamily="casual"
        android:text="@string/treasureHunt"
        android:textSize="14sp"
        android:textStyle="bold"
        app:backgroundTint="@color/colorAccent"
        app:layout_anchorGravity="bottom" />

    <Button
        android:id="@+id/buttonOpenCamera"
        android:layout_width="59dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal|center_vertical"
        app:backgroundTint="#33F8F2F2"
        app:icon="@android:drawable/ic_menu_camera"
        app:iconTint="#171616" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>