<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    tools:context=".ViewTreasureHuntActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- ovde napisati activity, koji jos nismo napravili-->
        <!--tools:context=".AddPlaceActivity"-->

        <TextView
            android:id="@+id/textViewTreasureHuntName"
            style="@style/loginHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/loginViewsMargin"
            android:foregroundGravity="right|center_horizontal"
            android:gravity="center"
            android:text="THName"
            android:textColor="#2196F3" />

        <TextView
            android:id="@+id/textViewTHCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/signup_text_margin_top"
            android:text="Category"
            android:textAlignment="center"
            android:textColor="#222020"
            android:textSize="18sp" />

        <CheckedTextView
            android:id="@+id/checkedTextViewActiveTH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/signup_text_margin_top"
            android:checkMark="@drawable/outline_check_circle_green_48dp"
            android:checked="true"
            android:clickable="false"
            android:paddingTop="3dp"
            android:paddingRight="0dp"
            android:text="This treasure hunt is active"
            android:textAlignment="gravity"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/textViewTHDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/loginViewsMargin"
            android:text="@string/description"
            android:textAlignment="center"
            android:textColor="#131313"
            android:textSize="18sp" />


    </LinearLayout>

</ScrollView>